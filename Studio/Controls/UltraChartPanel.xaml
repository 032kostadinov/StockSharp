<controls:BaseStudioControl x:Class="StockSharp.Studio.Controls.UltraChartPanel"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:controls="clr-namespace:StockSharp.Studio.Controls"
                            xmlns:s="http://schemas.ulcsoftware.co.uk/ultrachart">

    <s:UltrachartSurface x:Name="UltrachartSurface" s:ThemeManager.Theme="Chrome">
        <s:UltrachartSurface.ChartModifier>
            <s:ModifierGroup>
                <s:RubberBandXyZoomModifier ExecuteOn="MouseLeftButton"/>
                <s:ZoomExtentsModifier ExecuteOn="MouseDoubleClick"/>
            </s:ModifierGroup>
        </s:UltrachartSurface.ChartModifier>
    </s:UltrachartSurface>
</controls:BaseStudioControl>
