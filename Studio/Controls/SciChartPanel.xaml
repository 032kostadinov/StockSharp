<controls:BaseStudioControl x:Class="StockSharp.Studio.Controls.SciChartPanel"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
                            xmlns:controls="clr-namespace:StockSharp.Studio.Controls">

    <s:SciChartSurface x:Name="SciChartSurface" s:ThemeManager.Theme="Chrome">
        <s:SciChartSurface.ChartModifier>
            <s:ModifierGroup>
                <s:RubberBandXyZoomModifier ExecuteOn="MouseLeftButton"/>
                <s:ZoomExtentsModifier ExecuteOn="MouseDoubleClick"/>
            </s:ModifierGroup>
        </s:SciChartSurface.ChartModifier>
    </s:SciChartSurface>
</controls:BaseStudioControl>
