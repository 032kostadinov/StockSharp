<Window x:Class="SampleStrategies.PortfoliosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
        xmlns:dedit="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:xaml="http://schemas.stocksharp.com/xaml"
        Title="{x:Static loc:LocalizedStrings.Portfolios}" Height="200" Width="470">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <xaml:PortfolioGrid x:Name="PortfolioGrid" x:FieldModifier="public"  SelectedItemChanged="PortfolioGrid_SelectedItemChanged" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <dedit:SpinEdit x:Name="SpinEdit" Increment="1" MinValue="1" Width="70" EditValue="1"  />
            <Button x:Name="ProtectionButton" Content="Protection on" Width="100" IsEnabled="False" Click="ProtectionClick"  Margin="5,1" />
        </StackPanel>
    </Grid>
</Window>